= wrap_layout :layout do
  %section.content
    %div.content-container
      %date.blog-post.column.one-quarter="Posted #{current_article.date.strftime('%B %e, %Y')}"
      %article.column.three-quarters
        %h1.title=current_article.title
        %div.blog-content
          = yield
        %div.metadata
          = partial :tags, locals: {item: current_article, path_prefix: "blog"}
          = partial :post_navigation, locals: {label: "post"}
