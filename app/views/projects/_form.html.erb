<%= form_for @project, :html => { :multipart => true } do |project_form| %>
  <% if @project.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= project_form.label :title %><br />
    <%= project_form.text_field :title %>
  </div>
  <div class="field">
    <%= project_form.label :description %><br />
    <%= project_form.text_area :description %>
  </div>
  <div class="field">
    <%= project_form.label :active %><br />
    <%= project_form.check_box :active %>
  </div>
  <div class="field">
    <ul>
    <%= project_form.fields_for :project_assets do |asset| %>
      <li><%= asset.file_field :project_asset %></li>
    <% end %>
    </ul>
  </div>
  <div class="actions">
    <%= project_form.submit "Save" %>
  </div>
<% end %>
