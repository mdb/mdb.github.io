<p id="notice"><%= notice %></p>

<h1><%= @post.title %></h1>

<date>Published <%= @post.created_at.strftime("%B %-d, %Y") %></date>

<p><%= @post.content %></p>

<% if @post.tag_list.length >= 1 %>
  <p>Tags: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
<% end %>

<ul>
  <% if logged_in? %>
    <li><%= link_to 'Edit', edit_post_path(@post) %></li>
    <li><%= link_to 'Destroy', @post, :method => :delete, :confirm => "Are you sure?" %></li>
  <% end %>
  <li><%= link_to 'Back', posts_path %></li>
</ul>
